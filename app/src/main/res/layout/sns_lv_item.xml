<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="90dp"
              android:id="@+id/sns_lv_items"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/sns_lv_iv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:src="@mipmap/arrowicon"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sns_lv_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="3dp"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="true"
            android:textScaleX="1.2"
            android:text="@string/yiwf_text"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/gray4"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/sns_lv_comment"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center_vertical"
            android:lineSpacingExtra="5dp"
            android:lines="2"
            android:text="@string/yiwf_text"
            android:textColor="@color/gray6"
            android:textSize="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center_vertical|end">

            <TextView
                android:id="@+id/sns_lv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:text="@string/how_comment"
                android:textColor="@color/gray6"
                android:textSize="10sp"/>

            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/top"/>
            <ImageView
                android:id="@+id/iv_deep"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/depth"/>
            <ImageView
                android:id="@+id/iv_adv"
                android:layout_width="24dp"
                android:layout_height="12dp"
                android:layout_marginEnd="3dp"
                android:src="@mipmap/advertisement"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>