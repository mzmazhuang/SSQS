<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="35dp"
              android:background="@color/white"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/pl_odds_name"
            style="@style/w0h"
            android:layout_weight="3"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/pl_op_text"
            android:textColor="@color/gray4"
            android:textSize="15sp"/>

        <View
            android:layout_width="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_height="match_parent"
            android:background="@color/gray8"/>

        <LinearLayout
            style="@style/w0h"
            android:layout_weight="6"
            android:orientation="vertical">

            <LinearLayout
                style="@style/wh0"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pl_odds_cp"
                    android:textColor="@color/gray8"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/pl_cp_1"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/odds_num"
                    android:textColor="@color/gray8"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/pl_cp_2"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/samll_dot_num"
                    android:textColor="@color/gray8"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/pl_cp_3"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/odds_num"
                    android:textColor="@color/gray8"
                    android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/wh0"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/pl_odds_js"
                    android:textColor="@color/gray8"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/pl_js_1"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/odds_num"
                    android:textColor="@color/red"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/pl_js_2"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/samll_dot_num"
                    android:textColor="@color/green"
                    android:textSize="10sp"/>

                <TextView
                    android:id="@+id/pl_js_3"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/odds_num"
                    android:textColor="@color/red"
                    android:textSize="10sp"/>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/pl_end_img_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/you"
            />
    </LinearLayout>
</LinearLayout>