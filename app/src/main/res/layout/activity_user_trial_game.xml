<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_noload"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/user_trial_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:padding="@dimen/home_top_iv_padding"
        android:src="@mipmap/er_back_arrow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/username_register_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:background="@drawable/circular_login_bg"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/username"
            android:gravity="center_vertical"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColorHint="#50FFFFFF" />

        <EditText
            android:id="@+id/userpassword_register_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_login_bg"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/password"
            android:hint="@string/prompt_password"
            android:inputType="textPassword"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColorHint="#50FFFFFF" />

        <EditText
            android:id="@+id/confirm_pwd_register_et"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circular_login_bg"
            android:drawablePadding="10dp"
            android:drawableStart="@mipmap/password"
            android:hint="@string/prompt_password_second"
            android:inputType="textPassword"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColorHint="#50FFFFFF" />

        <Button
            android:id="@+id/register_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:layout_marginRight="47dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circular_login_button_bg"
            android:text="@string/loading"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hava_id_go2login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="47dp"
        android:layout_marginRight="47dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/right_wire"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FFF" />

        <TextView
            android:id="@+id/hava_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/hava_num_loding"
            android:textColor="#FFF"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FFF" />

    </LinearLayout>

    <TextView
        android:id="@+id/reminder_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#fc3232"
        android:textSize="12sp" />

</LinearLayout>
