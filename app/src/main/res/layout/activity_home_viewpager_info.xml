<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/home_match_thing_info_top_ly"
        layout="@layout/top_toolbar" />
    <!--中部-->
    <ScrollView
        style="@style/wh0"
        android:layout_weight="10"
        android:saveEnabled="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/match_thing_info_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_e"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/match_thing_info_type_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true" />

                <TextView
                    android:id="@+id/match_thing_info_type_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/match_thing_info_type_icon"
                    android:gravity="center"
                    android:paddingEnd="0dp"
                    android:paddingStart="5dp"
                    android:textColor="@color/gray2"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/match_thing_info_type_arrow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:padding="5dp"
                    android:src="@mipmap/you" />

                <TextView
                    android:id="@+id/match_thing_info_type_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@id/match_thing_info_type_arrow"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:textSize="10sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">


                    <ImageView
                        android:id="@+id/match_thing_info_savantphoto"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="15dp"
                        android:padding="2dp"
                        android:src="@mipmap/nologinportrait" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/match_thing_info_savantname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:paddingEnd="5dp"
                                android:paddingStart="0dp"
                                android:textColor="@color/gray2"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/match_thing_info_host"
                                android:layout_width="20dp"
                                android:layout_height="15dp"
                                android:layout_marginEnd="2dp"
                                android:gravity="center"
                                android:src="@mipmap/t_host_2" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/match_thing_info_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/hh_mm"
                            android:textColor="@color/gray8"
                            android:textSize="10sp" />
                    </LinearLayout>
                </LinearLayout>

                <!--标题正文-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:orientation="horizontal"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp">

                    <ImageView
                        android:id="@+id/match_thing_info_hot_tiezi"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_centerVertical="true"
                        android:paddingEnd="5dp"
                        android:paddingStart="0dp"
                        android:src="@mipmap/t_publish" />

                    <TextView
                        android:id="@+id/home_match_thing_info_context_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/match_thing_info_hot_tiezi"
                        android:gravity="center"
                        android:textColor="@color/gray3"
                        android:textSize="15sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/home_match_thing_info_context"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="7dp"
                    android:padding="5dp"
                    android:textColor="@color/gray6"
                    android:textSize="12sp" />

                <LinearLayout
                    android:id="@+id/home_match_thing_info_iv_contrllar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical">

                    <com.dading.ssqs.bean.SmoothImageView
                        android:id="@+id/home_match_thing_info_context_iv1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:scaleType="fitCenter" />

                    <com.dading.ssqs.bean.SmoothImageView
                        android:id="@+id/home_match_thing_info_context_iv2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:scaleType="fitCenter" />

                    <com.dading.ssqs.bean.SmoothImageView
                        android:id="@+id/home_match_thing_info_context_iv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:scaleType="fitCenter" />
                    <!--
                                       <com.dading.ssqs.bean.SmoothImageView
                                            android:id="@+id/home_match_thing_info_context_iv2"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:contentDescription="@string/iv2"
                                            android:minHeight="200dp"
                                            android:minWidth="300dp"
                                            android:padding="5dp"
                                            android:scaleType="fitXY"/>-->
                </LinearLayout>


                <ImageView
                    android:id="@+id/home_match_thing_info_context_good_iv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:src="@mipmap/t_user_recoms" />

                <TextView
                    android:id="@+id/home_match_thing_info_context_good_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="@string/good_0"
                    android:textColor="@color/gray"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="10dp"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_c" />

                <TextView
                    android:id="@+id/answer_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:text="@string/answer"
                    android:textColor="@color/gray2"
                    android:textSize="12sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray_c" />
            </LinearLayout>

            <ListView
                android:id="@+id/home_match_thing_info_comments_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_d"></ListView>
            <!--  <View
                  android:id="@+id/line_match_thing"
                  android:layout_width="match_parent"
                  android:layout_height="0.5dp"
                  android:background="@color/gray_d"/>-->
            <TextView
                android:id="@+id/answer_num_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/no_answer"
                android:textColor="@color/gray2"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/comments_lv_add_more"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="@string/add_more"
                    android:textColor="@color/gray2"
                    android:textSize="13sp" />

                <ProgressBar
                    android:id="@+id/comments_lv_pb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <!--底部-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/home_match_thing_info_publish_content"
            style="@style/w0h"
            android:layout_margin="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_weight="7"
            android:background="@mipmap/t_version"
            android:hint="@string/hint_say"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray" />

        <ImageView
            android:id="@+id/home_match_thing_info_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@mipmap/t_announce1"
            android:text="@string/publish" />
    </LinearLayout>

</LinearLayout>