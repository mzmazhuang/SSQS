<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

    <ImageView
        android:id="@+id/item_betting_body_close_serise"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingStart="15dp"
        android:paddingTop="5dp"
        android:foregroundGravity="center_vertical"
        android:src="@mipmap/g_turn_off1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/item_betting_body_close_serise"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/betting_body_item_result_serise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/gray2"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/betting_body_item_team_serise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_a"
            android:layout_marginTop="2dp"
            android:textSize="12sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/item_betting_body_pl_serise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/orange"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:textSize="12sp"
        android:textStyle="bold"/>

</RelativeLayout>