<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar" />

    <TextView
        android:id="@id/recharge_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="#444555"
        android:textSize="14sp" />

    <TextView
        android:id="@id/recharge_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/recharge_iv"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:maxHeight="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/recharge_up_step"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rect_orange2"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/up_step"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/recharge_at_once"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rect_orange2"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/recharge_at_once"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/recharge_finish"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/rect_orange2"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/have_recharged"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/recharge_content"
            style="@style/w0h"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="3"
            android:text="@string/match_main"
            android:textColor="@color/gray6"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>