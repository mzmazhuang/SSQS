<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d"/>

       <LinearLayout
           android:id="@+id/betting_match_info_ly"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

       </LinearLayout>

    <View
        android:id="@+id/view_line9"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_d"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/gray_e"
        android:padding="10dp">

        <TextView
            android:id="@+id/betting_lv_child_order_id_cg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/order_id"
            android:textColor="@color/gray6"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/betting_lv_child_order_num_cg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/betting_lv_child_order_id_cg"
            android:textColor="@color/gray6"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/betting_lv_child_order_time_cg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textColor="@color/gray6"
            android:textSize="13sp"/>
    </RelativeLayout>
</LinearLayout>