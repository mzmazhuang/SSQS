<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BLUE_GRAY1"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar" />

    <RelativeLayout
        android:id="@+id/phone_ly_lock"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:paddingEnd="5dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/phone_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/binding_cellphone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/phone_iv"
            android:gravity="center"
            android:text="@string/userlock_phone"
            android:textColor="@color/gray2"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:gravity="end">

            <TextView
                android:id="@+id/phone_lock_state"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:gravity="center"
                android:text="@string/phone_num"
                android:textColor="@color/gray6"
                android:textSize="15sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/phone_lock_arrow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/you" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/no_lock"
                    android:textColor="@color/gray6"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:src="@mipmap/you" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/qq_ly_lock"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingEnd="5dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/phone_iv_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/login_qq" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/phone_iv_qq"
            android:gravity="center"
            android:text="@string/ssdk_qq"
            android:textColor="@color/gray2"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/phone_num"
                android:textColor="@color/gray6"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:visibility="visible">

                <TextView
                    android:id="@+id/qq_lock_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/no_lock"
                    android:textColor="@color/gray6"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/qq_lock_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:src="@mipmap/you" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wx_ly_lock"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingEnd="5dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/phone_iv_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/login_weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/phone_iv_wx"
            android:gravity="center"
            android:text="@string/wx"
            android:textColor="@color/gray2"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/phone_num"
                android:textColor="@color/gray6"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:visibility="visible">

                <TextView
                    android:id="@+id/wx_lock_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/no_lock"
                    android:textColor="@color/gray6"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/wx_lock_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:src="@mipmap/you" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wo_ly_lock"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0.5dp"
        android:background="@color/white"
        android:paddingEnd="5dp"
        android:paddingStart="10dp">

        <ImageView
            android:id="@+id/phone_iv_wo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@mipmap/login_weibo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/phone_iv_wo"
            android:gravity="center"
            android:text="@string/wo"
            android:textColor="@color/gray2"
            android:textSize="15sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/phone_num"
                android:textColor="@color/gray6"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:visibility="visible">

                <TextView
                    android:id="@+id/wb_lock_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/no_lock"
                    android:textColor="@color/gray6"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/wb_lock_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:src="@mipmap/you" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/lock_bottom"
        android:textColor="@color/gray6"
        android:textSize="13sp" />
</LinearLayout>