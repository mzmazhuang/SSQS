<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#EBEEF0"
              android:orientation="vertical">

<include layout="@layout/top_toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:background="@drawable/shape_voil">

        <ImageView
            android:id="@+id/lock_phone_phone_number_icon"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/reg_phone"/>

        <EditText
            android:id="@+id/lock_phone_phone_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/gray2"
            android:inputType="phone"
            android:background="@null"
            android:textSize="13sp"
            android:hint="@string/hint_phone_number"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/lock_phone_phone_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:background="@mipmap/register"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/get_phone_code">
    </TextView>

    <View
        style="@style/wmh0"
        android:layout_weight="7"/>
</LinearLayout>
