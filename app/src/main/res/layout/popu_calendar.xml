            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/pop_calendar_rb7"
            android:layout_width="150dp"
            android:layout_height="36dp"
            android:background="@drawable/selecotr_calendar"
            android:button="@null"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/about_five_num"
            android:textColor="@drawable/selecotr_calendar_text_color"
            android:textSize="12sp" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/pop_calendar_rg_checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_toEndOf="@+id/pop_calendar_rg"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/pop_calendar_rb1_cm"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="10dp"
            android:background="@drawable/selecotr_calendar_cm"
            android:button="@null"
            android:checked="true"
            android:padding="8dp"
            android:singleLine="true" />

        <RadioButton
            android:id="@+id/pop_calendar_rb2_cm"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="10dp"
