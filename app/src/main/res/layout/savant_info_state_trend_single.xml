<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="30dp"
            android:src="@mipmap/arrowicon" />

        <TextView
            android:id="@+id/savant_info_vp_trend1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:gravity="center"
            android:text="@string/yp"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/savant_info_vp_trend2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/near_win"
            android:textColor="@color/red"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="horizontal">

        <RelativeLayout
            style="@style/w0h"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <progressbar.CircleProgressBar
                android:id="@+id/savant_info_vp_item_pb1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:progress="10"
                app:draw_progress_text="true"
                app:line_count="30"
                app:line_width="4dp"
                app:progress_background_color="@color/gray_d"
                app:progress_end_color="@color/red"
                app:progress_shader="sweep"
                app:progress_start_color="@color/red"
                app:progress_stroke_cap="round"
                app:progress_stroke_width="5dp"
                app:progress_text_color="@color/red"
                app:progress_text_size="17sp"
                app:style="solid_line" />

            <View
                android:id="@+id/savant_info_vp_item_flag1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp" />

            <TextView
                android:id="@+id/savant_info_order1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/savant_info_vp_item_flag1"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:text="@string/winlv"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/savant_info_order_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/savant_info_vp_item_pb1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/how_win3"
                android:textColor="@color/gray8"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/w0h"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <progressbar.CircleProgressBar
                android:id="@+id/savant_info_vp_item_pb2"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                app:draw_progress_text="true"
                app:line_count="30"
                app:line_width="4dp"
                app:progress_background_color="@color/gray_d"
                app:progress_end_color="@color/red"
                app:progress_shader="sweep"
                app:progress_start_color="@color/red"
                app:progress_stroke_cap="round"
                app:progress_stroke_width="5dp"
                app:progress_text_color="@color/red"
                app:progress_text_size="17sp"
                app:style="solid_line" />

            <View
                android:id="@+id/savant_info_vp_item_flag2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp" />

            <TextView
                android:id="@+id/savant_info_order2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/savant_info_vp_item_flag2"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:text="@string/winlv"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/savant_info_order_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/savant_info_vp_item_pb2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/how_win7"
                android:textColor="@color/gray8"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            style="@style/w0h"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <progressbar.CircleProgressBar
                android:id="@+id/savant_info_vp_item_pb3"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                app:draw_progress_text="true"
                app:line_count="30"
                app:line_width="4dp"
                app:progress_background_color="@color/gray_d"
                app:progress_end_color="@color/red"
                app:progress_shader="sweep"
                app:progress_start_color="@color/red"
                app:progress_stroke_cap="round"
                app:progress_stroke_width="5dp"
                app:progress_text_color="@color/red"
                app:progress_text_size="17sp"
                app:style="solid_line" />

            <View
                android:id="@+id/savant_info_vp_item_flag3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp" />

            <TextView
                android:id="@+id/savant_info_order3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/savant_info_vp_item_flag3"
                android:layout_centerHorizontal="true"
                android:paddingTop="3dp"
                android:text="@string/winlv"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/savant_info_order_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/savant_info_vp_item_pb3"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:paddingTop="10dp"
                android:text="@string/how_win30"
                android:textColor="@color/gray8"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>