            android:layout_height="36dp"
            android:background="@drawable/selecotr_calendar"
            android:button="@null"
            android:gravity="center"
            android:padding="8dp"
            android:singleLine="true"
            android:text="@string/about_five_num"
            android:textColor="@drawable/selecotr_calendar_text_color"
            android:textSize="12sp" />

