<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_suggestion_bg"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar" />

    <EditText
        android:id="@+id/suggestion_upload_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:hint="@string/hint_suggestion"
        android:maxHeight="200dp"
        android:minHeight="100dp"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="0.5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/suggestion_upload_iv1"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />

            <ImageView
                android:id="@+id/suggestion_upload_iv2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />

            <ImageView
                android:id="@+id/suggestion_upload_iv3"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />

            <ImageView
                android:id="@+id/suggestion_upload_iv4"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />

            <ImageView
                android:id="@+id/suggestion_upload_iv5"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />
        </LinearLayout>

        <TextView
            android:id="@+id/suggestion_upload_confirm"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray_c"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/kefu1_1"
            android:textColor="@color/gray8"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/work_time1"
            android:textColor="@color/gray8"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/kefu1_2"
            android:textColor="@color/gray8"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/work_time1"
            android:textColor="@color/gray8"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>