<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="80dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/savant_info_lv_item"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <LinearLayout
            style="@style/wh0"
            android:layout_marginTop="10dp"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/savant_info_lv_item_type"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="@string/match_type"
                android:textColor="@color/orange"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/savant_info_lv_item_main"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:maxWidth="130dp"
                    android:singleLine="true"
                    android:text="@string/savaninfo_main"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/middle_maohao"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/savant_info_lv_item_second"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center_vertical"
                    android:maxWidth="120dp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="15sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/savant_info_lv_item_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="15dp"
                android:gravity="center_vertical|end"
                android:singleLine="true"
                android:text="@string/today_time"
                android:textColor="@color/gray8"
                android:textSize="12sp"/>
        </LinearLayout>
        <RelativeLayout
            style="@style/wh0"
            android:layout_weight="2">
        <TextView
            android:id="@+id/savant_info_lv_item_data"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:text="@string/data_num"
            android:textColor="@color/gray8"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/savant_info_lv_item_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:text="@string/buy_price"
            android:textColor="@color/orange"
            android:layout_marginEnd="5dp"
            android:textSize="12sp"/>

        </RelativeLayout>
        <RelativeLayout
            style="@style/wh0"
            android:layout_marginStart="20dp"
            android:layout_weight="2"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/savant_info_lv_item_hour"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/time_hm"
                android:textColor="@color/orange"
                android:textSize="12sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/savant_info_lv_item_hour"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/savant_info_lv_item_refer_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:maxWidth="130dp"
                    android:minWidth="80dp"
                    android:singleLine="true"
                    android:text="@string/refer_yp"
                    android:textColor="@color/gray8"
                    android:textSize="12sp"/>
                <ImageView
                    android:id="@+id/savant_info_lv_item_refer_result"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:src="@mipmap/ying"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                >

                <LinearLayout
                    android:id="@+id/savant_info_item_bad_num_ly"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="10dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_user_bad"
                        android:button="@null"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/savant_info_item_badnum"
                        style="@style/w0h"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/savant_info_good_item_num_ly"
                    android:layout_width="25dp"
                    android:layout_height="15dp"
                    android:layout_marginEnd="10dp"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_user_good"
                        android:button="@null"
                        android:gravity="center"/>

                    <TextView
                        android:id="@+id/savant_info_item_goodnum"
                        style="@style/w0h"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>