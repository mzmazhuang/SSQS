<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="40dp"
              android:orientation="horizontal"
    >

    <LinearLayout
        android:id="@+id/match_ly"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:id="@+id/match_type"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/match_main"
            android:textColor="@color/PURSE"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/match_time"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/hh_mm"
            android:textColor="@color/gray2"
            android:textSize="11sp"/>

        <TextView
            android:id="@+id/match_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:text="@string/match_second"
            android:textColor="@color/gray4"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/vs"
            android:textColor="@color/red"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/match_second"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/match_second"
            android:textColor="@color/gray4"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/guess_people"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:maxWidth="60dp"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:text="@string/guess_people"
            android:textColor="@color/gray8"
            android:textSize="10sp"
            />

        <ImageView
            android:id="@+id/go_match_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:src="@mipmap/you"/>
    </LinearLayout>
</LinearLayout>