<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingStart="10dp"
              android:paddingEnd="10dp"
              android:paddingBottom="90dp"
              android:paddingTop="90dp"
              android:id="@+id/jc_play_help_pop_out"
    >

    <RelativeLayout
        android:id="@+id/jc_play_help_pop_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_top"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/play_protocol"
            android:textColor="@color/orange"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/jc_play_help_pop_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:background="@mipmap/g_dispose_of"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        />

    <ScrollView
        style="@style/wmh0"
        android:layout_weight="6"
        android:scrollbars="none"
        android:saveEnabled="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jc_play_help_pop_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15sp"
                android:paddingTop="15sp"
                android:paddingBottom="8sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/jc_pop_top"
                android:textColor="@color/gray3"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/jc_play_help_pop_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/spf"
                android:textColor="@color/orange"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/jc_play_help_pop_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15sp"
                android:text="@string/spf_text"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/gray3"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/jc_play_help_pop_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/jc_pop_yp_play"
                android:textColor="@color/orange"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/jc_play_help_pop_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15sp"
                android:paddingEnd="15sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/yiwf_text"
                android:textColor="@color/gray3"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/jc_play_help_pop_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/big_small_play"
                android:textColor="@color/orange"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/jc_play_help_pop_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/big_samll_text"
                android:textColor="@color/gray3"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/jc_play_help_pop_tv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/lost_ball_play"
                android:textColor="@color/orange"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/jc_play_help_pop_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/lost_ball_text"
                android:textColor="@color/gray3"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/half_match_play"
                android:textColor="@color/orange"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/half_math_text"
                android:textColor="@color/gray3"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/math_prize"
                android:textColor="@color/orange"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/math_prize_text"
                android:textColor="@color/gray3"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="15dp"
                android:text="@string/betting_do"
                android:textColor="@color/orange"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="15dp"
                android:paddingEnd="15sp"
                android:lineSpacingExtra="5dp"
                android:text="@string/betting_do_text"
                android:textColor="@color/gray3"
                android:textSize="12sp"/>
        </LinearLayout>
    </ScrollView>

    <View
        style="@style/wmh0"
        android:layout_weight="1"
        android:background="@drawable/rect_bottom">
    </View>
</LinearLayout>