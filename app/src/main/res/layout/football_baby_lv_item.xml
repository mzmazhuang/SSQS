<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/football_baby_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/football_baby_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:src="@mipmap/nologinportrait" />

        <TextView
            android:id="@+id/football_baby_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/football_baby_photo"
            android:gravity="center"
            android:maxWidth="180dp"
            android:singleLine="true"
            android:text="@string/yiwf_text"
            android:textColor="@color/gray2"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/football_baby_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/football_baby_nickname"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/football_baby_photo"
            android:gravity="center"
            android:maxWidth="180dp"
            android:singleLine="true"
            android:text="@string/yiwf_text"
            android:textColor="@color/gray8"
            android:textSize="13sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/football_baby_publish_time"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="@string/pulicsh_time"
            android:textColor="@color/gray2"
            android:textSize="13sp" />
    </RelativeLayout>

    <richtextview.RichTextView
        android:id="@+id/football_baby_pcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lineSpacingExtra="5dp"
        android:paddingTop="5dp"
        android:text="@string/yiwf_text"
        android:textColor="@color/gray6"
        android:textSize="12sp" />

    <!--<ImageView
            android:id="@+id/football_baby_self_timer"
        android:layout_width="match_parent"
            android:layout_marginTop="10dp"
        android:layout_height="400dp"
        android:scaleType="fitXY"
        android:src="@mipmap/arrowicon"/>-->
</LinearLayout>