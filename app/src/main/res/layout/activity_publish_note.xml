<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/publish_note_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@null"
            android:maxEms="30"
            android:padding="5dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_a" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_a" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/gray_e" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <EditText
                android:id="@+id/publish_note_context"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/publish_note_context_nint"
                android:lines="10"
                android:maxEms="30"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_a" />

            <LinearLayout
                android:id="@+id/publish_note_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@color/gray_d"
                android:gravity="center_vertical"
                android:padding="5dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/t_orientation" />

                <TextView
                    android:id="@+id/publish_note_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/publish_note_city_close"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="10dp"
                    android:padding="5dp"
                    android:src="@mipmap/close" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_a" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingEnd="10dp"
            android:paddingStart="10dp">

            <ImageView
                android:id="@+id/publish_note_image"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:src="@mipmap/t_picture" />

            <ImageView
                android:id="@+id/publish_note_location"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:src="@mipmap/t_orientation"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_d"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/publish_note_iv1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />

            <ImageView
                android:id="@+id/publish_note_iv2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />

            <ImageView
                android:id="@+id/publish_note_iv3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />

            <ImageView
                android:id="@+id/publish_note_iv4"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />

            <ImageView
                android:id="@+id/publish_note_iv5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:src="@mipmap/f_addmorepicture" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>