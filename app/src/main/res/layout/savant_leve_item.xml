<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="70dp"
              android:background="@color/white"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/savant_seach_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/savant_seach_item_savantpoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    >

                    <TextView
                        android:id="@+id/savant_seach_item_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="@string/savant_name"
                        android:textColor="@color/orange"
                        android:textSize="15sp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center_vertical"
                        android:background="#ccc"/>

                    <TextView
                        android:id="@+id/savant_seach_item_nickleve"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/samll_savant"
                        android:textColor="#666"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </RelativeLayout>


            <TextView
                android:id="@+id/savant_seach_item_lianhong"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:padding="2dp"
                android:background="@drawable/rect_red_0"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:text="@string/how_lian_hong"
                android:textColor="@color/white_a"
                android:textSize="10sp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>