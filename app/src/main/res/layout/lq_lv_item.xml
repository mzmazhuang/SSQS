<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lq_other_say_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/lq_user_name_photo_other"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                >
            </ImageView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    >

                    <TextView

                        android:id="@+id/lq_user_name_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_name_text"
                        android:textColor="@color/orange"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/lq_publish_time_other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="@string/today_time"
                        android:textColor="@color/gray8"
                        android:textSize="10sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/lq_publish_text_other"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginTop="3dp"
                    android:paddingEnd="40dp"
                    android:paddingStart="0dp"
                    android:text="@string/lq_publish_text"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lq_my_say_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                >

                <RelativeLayout
                    android:id="@+id/lq_my_info_ry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    >

                    <TextView
                        android:id="@+id/lq_user_name_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="3dp"
                        android:text="@string/user_name_text"
                        android:textColor="@color/orange"
                        android:textSize="10sp"/>

                    <TextView
                        android:id="@+id/lq_publish_time_my"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_toStartOf="@id/lq_user_name_my"
                        android:text="@string/today_time"
                        android:textColor="@color/gray8"
                        android:textSize="10sp"/>

                </RelativeLayout>

                <TextView
                    android:id="@+id/lq_publish_text_my"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lq_my_info_ry"
                    android:layout_marginTop="3dp"
                    android:gravity="end"
                    android:paddingEnd="0dp"
                    android:paddingStart="40dp"
                    android:text="@string/lq_publish_text"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    />
            </RelativeLayout>

            <ImageView
                android:id="@+id/lq_user_name_photo_my"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                >
            </ImageView>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>