<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lock_popu_ly"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="@mipmap/recommend_opaque"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView android:id="@+id/lock_popu_text"
                  android:layout_width="match_parent"
                  android:layout_height="100dp"
                  android:gravity="center"
                  android:textSize="13sp"
                  android:text="@string/pop_notice"
                  android:lineSpacingExtra="2dp"
                  android:textColor="@color/gray2"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_d"/>
        <TextView
            android:id="@+id/lock_popu_know"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rect_bottom"
            android:textColor="@color/orange1"
            android:text="@string/i_know"
            android:textSize="18sp"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>