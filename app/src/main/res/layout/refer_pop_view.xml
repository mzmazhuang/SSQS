<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/refer_popu_ly"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="50dp"
        android:background="@mipmap/recommend_opaque"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView android:id="@+id/refer_popu_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:textSize="13sp"
            android:text="@string/no_shenhe_notice"
            android:textColor="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_d"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/refer_write_look"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/go_to_lokk"
                    android:gravity="center"
                    android:textColor="@color/gray6"
                    android:textSize="13sp"
                    android:background="@mipmap/recommend_ash"
                    />
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/gray_d"/>
                <TextView
                    android:id="@+id/refer_write_authentication"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textColor="@color/orange"
                    android:gravity="center"
                    android:text="@string/auth_once"
                    android:textSize="13sp"
                    android:src="@mipmap/recommend_orange"
                    />
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>