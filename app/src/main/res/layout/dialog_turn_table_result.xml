<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="170dp"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@mipmap/rule_frame"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@mipmap/rule_frame_2"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="5dp"
            android:text="@string/cue"
            android:textColor="@color/gray"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/dialog_turn_table_text"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:ellipsize="start"
            android:gravity="center"
            android:maxLines="2"
            android:paddingEnd="45dp"
            android:paddingStart="45dp"
            android:text="@string/turn_table_result"
            android:textColor="@color/white"
            android:textSize="15sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/dialog_turn_table_btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/p_confirm"
                />

            <ImageView
                android:id="@+id/dialog_turn_table_btn_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@mipmap/p_look_prize"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>