<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:id="@+id/my_follow_item"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingTop="5dp">

        <ImageView
            android:id="@+id/my_follow_item_photo"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/my_follow_item_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_follow_item_nickname"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical"
                android:textColor="@color/orange"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/my_follow_item_desc"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/match_main"
                android:textColor="@color/gray6"
                android:textSize="13sp"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/my_follow_follow_tag"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selecotr_collect_follow"
            android:button="@null"/>
    </RelativeLayout>
</LinearLayout>