<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/matchbefore_left_item_ly"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="60dp"
              android:orientation="horizontal"
              android:paddingEnd="5dp"
              android:paddingStart="5dp">

    <ImageView
        android:id="@+id/matchbefore_left_item_icon"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:src="@mipmap/ic_launcher"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/matchbefore_left_item_type"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:singleLine="true"
        android:text="@string/match_type"
        android:textColor="@color/gray8"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/matchbefore_left_item_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical|end"
        android:padding="5dp"
        android:singleLine="true"
        android:text="@string/num34112"
        android:textColor="@color/yellow_orange"
        android:textSize="12sp"/>
</LinearLayout>
