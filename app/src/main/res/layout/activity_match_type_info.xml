<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:id="@+id/match_type_info_sc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:saveEnabled="false"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellow_orange"
                android:orientation="vertical"
                android:paddingTop="55dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="20dp"
                    android:paddingTop="30dp">


                    <ImageView
                        android:id="@+id/match_type_info_savantphoto"
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="15dp"
                        android:padding="2dp"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:id="@+id/match_type_info_nickname"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="5dp"
                                android:gravity="center_vertical"
                                android:singleLine="true"
                                android:textSize="15sp"
                                />

                            <CheckBox
                                android:id="@+id/match_type_info_follow_cb"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginStart="5dp"
                                android:background="@drawable/selecotr_savant_info_gz"
                                android:button="@null"
                                android:gravity="center|start"
                                />
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginEnd="2dp"
                                android:gravity="center"
                                android:text="@string/fans"
                                android:textSize="10sp"
                                />

                            <TextView
                                android:id="@+id/match_type_info_fans_num"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center"
                                android:padding="2dp"
                                android:textSize="10sp"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:text="@string/tiezi"
                                android:textSize="10sp"
                                />

                            <TextView
                                android:id="@+id/match_type_info_tiezi_num"
                                android:layout_width="wrap_content"
                                android:layout_height="15dp"
                                android:layout_marginEnd="2dp"
                                android:layout_marginStart="5dp"
                                android:gravity="center"
                                android:padding="2dp"
                                android:textSize="10sp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <ListView
                android:id="@+id/match_type_info_lv"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>
        </LinearLayout>
    </ScrollView>
        <RelativeLayout
            android:id="@+id/match_type_info_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow_orange_alpha"
            android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
            >

            <ImageView
                android:id="@+id/match_type_info_return"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:layout_marginStart="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/er_back_arrow"/>

            <ImageView
                android:id="@+id/match_type_info_publish"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:padding="15dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:gravity="center"
                android:src="@mipmap/share_dot"
                android:textColor="@color/white"
                android:textSize="20sp"/>

        </RelativeLayout>

</RelativeLayout>