<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="42dp"
              android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_ef"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/gray_ef"
        >

        <TextView
            android:id="@+id/gbseries_gp_league_name"
            style="@style/w0h"
            android:layout_weight="2"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/match_type"
            android:textColor="@color/orange_tv"
            android:textSize="12sp"
            />

        <TextView
            android:id="@+id/gbseries_gp_open_time"
            style="@style/w0h"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/match_start_time"
            android:textColor="@color/gray8"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/gbseries_gp_main_team"
            style="@style/w0h"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/match_main"
            android:textColor="@color/gray4"
            android:textSize="14sp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="3dp"
            android:gravity="center"
            android:text="@string/vs"
            android:textColor="@color/gray8"
            android:textSize="8sp"
            />

        <TextView
            android:id="@+id/gbseries_gp_second_team"
            style="@style/w0h"
            android:layout_weight="3"
            android:gravity="center_vertical|end"
            android:singleLine="true"
            android:text="@string/match_second"
            android:textColor="@color/gray4"
            android:textSize="14sp"
            />

        <ImageView
            android:id="@+id/gbseries_gp_item_arrow"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:paddingEnd="15dp"
            android:paddingStart="5dp"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:src="@mipmap/xia"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blue_black_light"/>
</LinearLayout>