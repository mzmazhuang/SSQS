<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingStart="15dp"
              android:paddingEnd="15dp"
              android:paddingBottom="90dp"
              android:paddingTop="90dp"
              android:id="@+id/jc_play_history_pop_out"
    >

    <RelativeLayout
        android:id="@+id/jc_play_history_pop_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_top"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/betting_record"
            android:textColor="@color/orange"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/jc_play_history_pop_close"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/bet_close"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray"
        />

    <ListView
        android:id="@+id/jc_play_history_pop_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/rect_bottom"/>

</LinearLayout>