<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/home_lv_information_item"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="10dp"
              android:background="@color/white"
              android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/home_lv_information_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/home_lv_information_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:lines="2"
        android:textColor="@color/gray8"
        android:lineSpacingExtra="5dp"
        android:text="@string/context_text"
        android:textSize="12sp"
        />

    <LinearLayout
        android:id="@+id/iv_ly"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/home_lv_information_item_iv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            android:layout_margin="5dp"
            />

        <ImageView
            android:id="@+id/home_lv_information_item_iv2"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

        <ImageView
            android:id="@+id/home_lv_information_item_iv3"
            android:layout_margin="5dp"
            android:layout_width="0dp"
            android:scaleType="centerCrop"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/home_lv_information_item_explan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:textSize="10sp"
                android:text="@string/savant_name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from_text"
                android:textSize="10sp"
                android:textColor="@color/gray2"
                android:layout_margin="5dp"
                />

            <TextView
                android:textColor="@color/orange"
                android:id="@+id/home_lv_information_item_explan_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            >

            <TextView
                android:id="@+id/number_goods_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/tabrecoms"
                android:drawablePadding="3dp"
                android:textColor="@color/gray6"
                android:text="@string/good_num"
                android:paddingEnd="5dp"
                android:paddingStart="0dp"
                />

            <TextView
                android:id="@+id/number_comments_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/message"
                android:textColor="@color/gray6"
                android:drawablePadding="3dp"
                android:text="@string/good_num"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>