<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_d"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar" />

    <LinearLayout
        android:id="@+id/savant_auth_cue_ly"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/red_dark"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingEnd="0dp"
            android:paddingStart="15dp"
            android:singleLine="true"
            android:text="@string/warm_notice"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/savant_auth_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:src="@mipmap/bet_close" />
    </LinearLayout>

    <ScrollView
        style="@style/wh0"
        android:layout_weight="10"
        android:background="@color/gray_d"
        android:saveEnabled="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/savant_auth_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/referred_experence"
                    android:textColor="@color/gray6"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@id/savant_auth_experience"
                    android:src="@mipmap/expert_recoms" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:text="@string/good_match"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/savant_auth_good_match"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/savant_auth_good_des"
                android:maxLength="500"
                android:paddingBottom="10dp"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:textColor="@color/gray6"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:text="@string/main_think"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/savant_auth_yp"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selecotr_savant_auth_1"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/savant_auth_op"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selecotr_savant_auth_2"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/savant_auth_against_historical"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selecotr_savant_auth_3"
                    android:button="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/savant_auth_weather"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selecotr_savant_auth_4"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/savant_auth_team_sucess"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selecotr_savant_auth_5"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/savant_auth_tean_play_method"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selecotr_savant_auth_6"
                    android:button="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="10dp">

                <CheckBox
                    android:id="@+id/savant_auth_pre_match"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selecotr_savant_auth_7"
                    android:button="@null" />

                <CheckBox
                    android:id="@+id/savant_auth_other"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selecotr_savant_auth_8"
                    android:button="@null" />

                <View
                    style="@style/w0h"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:text="@string/savant_introduce"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/savant_auth_introduce_content"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/savant_introduce_context"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColor="@color/gray6"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/savant_auth_nickNumber_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/nicknum_info"
                    android:textColor="@color/gray6"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@id/savant_auth_nickNumber_info"
                    android:src="@mipmap/expert_recoms" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:singleLine="true"
                    android:text="@string/savant_regist_real_name"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/savant_auth_real_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:hint="@string/savant_auth_real_name_context"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColor="@color/gray6"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:text="@string/savant_auth_id_card"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/savant_auth_id_card"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/savant_auth_id_card_context"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:textColor="@color/gray6"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:text="@string/savant_auth_bank_card_num"
                    android:textColor="@color/gray1"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/savant_auth_pop_ly"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/savant_auth_pop_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/xia" />

                <TextView
                    android:id="@+id/savant_auth_toll"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/please_check_bank"
                    android:textColor="@color/gray6"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:text="@string/savant_auth_id_card_notify"
                    android:textColor="@color/gray8"
                    android:textSize="13sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/savant_auth_bank_card"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:hint="@string/savant_auth_id_card_hint"
                android:inputType="number"
                android:paddingBottom="5dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:singleLine="true"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="2dp"
                android:paddingEnd="3dp"
                android:paddingStart="10dp"
                android:paddingTop="5dp">

                <CheckBox
                    android:id="@+id/savant_auth_agree_img"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/selector_agree_checkbox"
                    android:button="@null" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingEnd="0dp"
                    android:paddingStart="2dp"
                    android:text="@string/savant_auth_agree1"
                    android:textColor="@color/gray8"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="2dp"
                android:paddingEnd="3dp"
                android:paddingStart="10dp"
                android:paddingTop="0dp"
                android:text="@string/savant_auth_agree2"
                android:textColor="@color/gray8"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/savant_auth_contact_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/contact_method"
                    android:textColor="@color/gray6"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@id/savant_auth_contact_method"
                    android:src="@mipmap/expert_recoms" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:text="@string/savant_auth_phone_must"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/savant_auth_phone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/auth_phone_hint"
                android:inputType="phone"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:textColor="@color/gray6"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:maxLength="250"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:text="@string/savant_auth_weixin"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/savant_auth_weixin"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/savant_auth_hint_weixin"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:textColor="@color/gray6"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:background="@color/orange" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|start"
                    android:paddingEnd="0dp"
                    android:paddingStart="7dp"
                    android:text="@string/savant_auth_email"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/savant_auth_email"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="@string/savant_auth_hint_email"
                android:inputType="textEmailAddress"
                android:paddingEnd="0dp"
                android:paddingStart="10dp"
                android:textColor="@color/gray6"
                android:textColorHint="@color/gray6"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/savant_auth_id_attestation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/savant_auth_id_attestation"
                    android:textColor="@color/gray6"
                    android:textSize="13sp" />

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="3dp"
                    android:layout_toStartOf="@id/savant_auth_id_attestation"
                    android:src="@mipmap/expert_recoms" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/savant_auth_id_attestation_ly"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                android:paddingBottom="3dp"
                android:paddingTop="0dp">

                <ImageView
                    android:id="@+id/savant_auth_id_attestation_pic1"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:src="@mipmap/handidcard" />

                <ImageView
                    android:id="@+id/savant_auth_id_attestation_pic2"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:src="@mipmap/idcardhead" />

                <ImageView
                    android:id="@+id/savant_auth_id_attestation_pic3"
                    style="@style/w0h"
                    android:layout_weight="1"
                    android:src="@mipmap/idcardback" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_d" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="5dp"
                android:background="@color/white"
                android:padding="3dp"
                android:text="@string/savant_auth_regist_notice"
                android:textColor="@color/gray8"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/savant_auth_loading"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:background="@color/yellow_orange"
                android:gravity="center"
                android:text="@string/savant_auth_loading" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/savant_auth_bottom_notice"
                    android:textColor="@color/gray8"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/savant_auth_savnt_protocol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/savant_auth_protocol"
                    android:textColor="@color/orange"
                    android:textSize="13sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/savant_auth_bottom"
                android:textColor="@color/orange"
                android:textSize="13sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>