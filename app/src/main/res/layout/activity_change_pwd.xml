<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <include
        layout="@layout/top_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_voil"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/et_change_pwd_old_icon"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/r_reg_lock"/>

                <EditText
                    android:id="@+id/et_change_pwd_old"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/et_change_pwd_old_icon"
                    android:background="@null"
                    android:hint="@string/input_old"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/gray2"
                    android:textColorHint="@color/gray8"
                    android:textSize="15sp"/>

                <CheckBox
                    android:id="@+id/et_change_pwd_old_look"
                    android:layout_width="15dp"
                    android:layout_height="11dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selecotr_reg_eyes"
                    android:button="@null"
                    />

                <ImageButton
                    android:id="@+id/et_change_pwd_old_close"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/et_change_pwd_old_look"
                    android:background="@color/transparent"
                    android:src="@mipmap/jp_close"
                    android:visibility="gone"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_voil"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/et_change_pwd_new_icon"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/r_reg_lock"/>

                <EditText
                    android:id="@+id/et_change_pwd_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@id/et_change_pwd_new_icon"
                    android:background="@null"
                    android:hint="@string/input_new"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:textColor="@color/gray2"
                    android:textColorHint="@color/gray8"
                    android:textSize="15sp"/>

                <CheckBox
                    android:id="@+id/et_change_pwd_new_look"
                    android:layout_width="15dp"
                    android:layout_height="11dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/selecotr_reg_eyes"
                    android:button="@null"
                    />

                <ImageButton
                    android:id="@+id/et_change_pwd_new_close"
                    android:layout_width="15dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp"
                    android:layout_toStartOf="@id/et_change_pwd_new_look"
                    android:background="@color/transparent"
                    android:src="@mipmap/jp_close"
                    android:visibility="gone"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/change_pwd_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@mipmap/register"
        android:gravity="center"
        android:text="@string/change_pwd"
        android:textColor="@color/white"
        android:textSize="15sp"
        />

</LinearLayout>