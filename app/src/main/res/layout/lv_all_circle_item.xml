<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/all_circle_item_ly"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/all_circle_item_iv"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/all_circle_item_title"
                style="@style/wh0"
                android:layout_weight="1"
                android:gravity="bottom"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="3dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:text="@string/fans1"
                    android:textColor="@color/gray6"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/all_circle_item_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/gray6"
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>

        <CheckBox
            android:id="@+id/all_circle_item_colloect"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:button="@null"
            android:drawableTop="@drawable/selecotr_color_cb"
            android:paddingBottom="5dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="10dp"/>
    </LinearLayout>
</LinearLayout>