<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_e"
    android:orientation="vertical">

    <include layout="@layout/top_toolbar" />

    <LinearLayout
        android:id="@+id/my_message_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:src="@mipmap/a_accounting_identities" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/my_message_topic_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/today_topic"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/my_message_topic_num"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/my_message_topic_title"
                    android:background="@drawable/red_circle"
                    android:gravity="center"
                    android:maxHeight="22dp"
                    android:maxWidth="25dp"
                    android:minHeight="11dp"
                    android:minWidth="12dp"
                    android:padding="2dp"
                    android:scaleType="fitXY"
                    android:singleLine="true"
                    android:text="@string/zero"
                    android:textColor="@color/white"
                    android:textSize="8sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/my_message_topic_introduce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/tie_zi_content"
                android:textColor="@color/gray6"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

