<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/comments_lv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/comments_lv_photo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/comments_lv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/comments_lv_photo"
                android:text="@string/savant_name"
                android:textColor="@color/gray6"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/comments_lv_publish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="@string/time_hm"
                android:textColor="@color/gray6"
                android:textSize="12sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/comments_lv_context"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/comments_lv"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="25dp"
            android:paddingBottom="15dp"
            android:singleLine="false"
            android:text="@string/sb"
            android:textColor="@color/black"
            android:textSize="13sp"/>
    </RelativeLayout>
</LinearLayout>