<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="170dp"
              android:background="@color/white"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/referr_lv_item"
        android:layout_width="match_parent"
        android:layout_height="170dp"
              android:paddingStart="10dp"
                      android:paddingEnd="10dp"
                      android:paddingTop="5dp"
                      android:paddingBottom="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="5dp"
            >

            <ImageView
                android:id="@+id/referr_savant_lv_savantpoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        >

                        <TextView
                            android:id="@+id/referr_savant_lv_nickname"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="5dp"
                            android:gravity="center_vertical"
                            android:singleLine="true"
                            android:text="@string/savant_name"
                            android:textColor="@color/orange2"
                            android:textSize="13sp"
                            />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/gray_c"/>

                        <TextView
                            android:id="@+id/referr_savant_lv_nickleve"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="@string/samll_savant"
                            android:textColor="@color/gray6"
                            android:textSize="12sp"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="5dp"
                        >

                        <TextView
                            android:id="@+id/referr_savant_lv_guess_data"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|end"
                            android:text="@string/about_sevent_day"
                            android:textColor="@color/gray4"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:id="@+id/referr_savant_lv_guess_score"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical|start"
                            android:singleLine="true"
                            android:text="@string/zhong_jichang"
                            android:textColor="@color/red"
                            android:textSize="12sp"
                            />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        >

                        <ImageView
                            android:id="@+id/referr_savant_lv_doyen"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginEnd="2dp"
                            android:src="@mipmap/tarento"
                            />

                        <TextView
                            android:id="@+id/referr_savant_lv_lianhong"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_marginEnd="2dp"
                            android:background="@drawable/rect_red_0"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="10sp"
                            />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="2dp"
                        android:background="@color/gray_d"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/referr_savant_lv_match_type"
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/match_type"
                    android:textColor="@color/PURSE"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/referr_savant_lv_match_main"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:gravity="center"
                    android:text="@string/match_main"
                    android:textColor="@color/gray4"
                    android:textSize="14sp"
                    />

                <View
                    android:layout_width="7dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:background="@color/gray4"
                    />

                <TextView
                    android:id="@+id/referr_savant_lv_match_second"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/match_second"
                    android:textColor="@color/gray4"
                    android:textSize="14sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/referr_savant_lv_match_data"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="2dp"
                    android:maxLines="2"
                    android:text="@string/data_num"
                    android:textColor="@color/gray8"
                    android:textSize="12sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        style="@style/wh0"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/type"
                            android:textColor="@color/gray4"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/referr_savant_lv_guess_type"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingEnd="5dp"
                            android:paddingStart="5dp"
                            android:text="@string/guess_single"
                            android:textColor="@color/gray8"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        style="@style/wh0"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/referr_1"
                            android:textColor="@color/gray4"
                            android:textSize="13sp"
                            />

                        <TextView
                            android:id="@+id/referr_savant_lv_guess_price"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingEnd="10dp"
                            android:paddingStart="5dp"
                            android:singleLine="true"
                            android:text="@string/buy_price"
                            android:textColor="@color/orange"
                            android:textSize="11sp"
                            />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="match_parent"
                            android:src="@mipmap/user_diamond"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="55dp"
                    android:gravity="center"
                    android:text="@string/analyse"
                    android:textColor="@color/gray4"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/referr_savant_lv_guess_desc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingEnd="10dp"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:textColor="@color/gray8"
                    android:textSize="12sp"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginTop="3dp"
                >

                <TextView
                    android:id="@+id/referr_savant_lv_upload_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="55dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="@string/pulicsh_time"
                    android:textColor="@color/gray8"
                    android:textSize="12sp"
                    android:layout_marginBottom="2dp"
                    />

                <LinearLayout
                    android:id="@+id/bad_num_ly"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="10dp"
                    >

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_user_bad"
                        android:button="@null"/>

                    <TextView
                        android:id="@+id/referr_savant_lv_badnum"
                        style="@style/w0h"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:layout_marginTop="3dp"
                        android:text="@string/zero"
                        android:textColor="@color/gray6"
                        android:textSize="12sp"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_toStartOf="@id/bad_num_ly">

                    <TextView
                        android:layout_width="5dp"
                        android:layout_height="10dp"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:background="@drawable/selector_user_good"
                        android:button="@null"/>

                    <TextView
                        android:id="@+id/referr_savant_lv_goodnum"
                        style="@style/w0h"
                        android:layout_weight="2"
                        android:layout_marginTop="3dp"
                        android:gravity="center"
                        android:text="@string/zero"
                        android:textColor="@color/gray6"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>