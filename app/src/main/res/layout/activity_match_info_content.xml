<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/living_video_ly"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@mipmap/football_bg"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/match_info_back"
                    android:layout_width="45dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingEnd="12dp"
                    android:paddingStart="12dp"
                    android:paddingTop="5dp"
                    android:src="@mipmap/er_back_arrow" />

                <TextView
                    android:id="@+id/match_info_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="14sp" />


                <CheckBox
                    android:id="@+id/match_info_collect_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/selecotr_collect"
                    android:button="@null"
                    android:gravity="center"
                    android:padding="8dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/match_info_open_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/match_info_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/match_info_timericon"
                    android:layout_width="2dp"
                    android:layout_height="3dp"
                    android:layout_toEndOf="@id/match_info_timer"
                    android:background="@color/red"
                    android:gravity="center"
                    android:visibility="gone" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/match_info_main_icon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"

                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/match_info_main_icon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/match_info_main"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|bottom"
                            android:paddingEnd="0dp"
                            android:paddingStart="10dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/match_info_main_rank"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="3"
                            android:gravity="center_vertical|top"
                            android:paddingEnd="0dp"
                            android:paddingStart="10dp"
                            android:textColor="@color/white_a"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/match_info_score"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical|end"
                        android:textColor="@color/green"
                        android:textSize="20sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/match_info_score_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/VS"
                        android:textColor="@color/white"
                        android:textSize="12sp" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/match_info_second_icon"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_toStartOf="@id/match_info_second_icon"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/match_info_second"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="2"
                            android:gravity="center_vertical|end|bottom"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/match_info_second_rank"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="1dp"
                            android:layout_weight="3"
                            android:gravity="end|top"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"
                            android:textColor="@color/white_a"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="13dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/match_up_halfscore"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:textColor="@color/gray8"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/match_info_living"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:src="@mipmap/notlive_3"
                    android:textColor="@color/gray8" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/match_info_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <com.dading.ssqs.components.tabindicator.TabIndicator
                android:id="@+id/match_info_tabindicator"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:tiLineColor="@color/home_top"></com.dading.ssqs.components.tabindicator.TabIndicator>

            <android.support.v4.view.ViewPager
                android:id="@+id/match_info_viewpager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"></android.support.v4.view.ViewPager>
        </LinearLayout>
    </LinearLayout>
    <!--<include layout="@layout/load_data"/>-->
</RelativeLayout>